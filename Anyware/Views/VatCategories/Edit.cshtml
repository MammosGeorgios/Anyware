@model Anyware.Models.VatCategory

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div id="VATCategory">
        <h4>Edit Vat Category</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VatCategoryID)

        <div class="form-group">
            @Html.LabelFor(model => model.VatName, htmlAttributes: new { @class = "control-label col-md-2" })
